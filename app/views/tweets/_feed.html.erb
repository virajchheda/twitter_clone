<% if @tweets %>
   <% @tweets.each do |tweet| %>
      <div class="card">
        <div class="card-body">
          <div class="row">
              <div class="col-md-2">
                  <img src="https://image.ibb.co/jw55Ex/def_face.jpg" class="img img-rounded img-fluid"/>
              </div>
              <div class="col-md-10">
                <p>
                  <a class="float-left" href="https://maniruzzaman-akash.blogspot.com/p/contact.html">
                    <strong>Maniruzzaman Akash</strong>
                    <br>
                    <small>@Akash</small>
                  </a>
                </p>
                <div class="clearfix"></div>
                <p>
                  <p><%= tweet.tweet%></p>
                  <hr>
                  <%= link_to tweet, class: "btn btn-lg" do %>
                    <i class="fa fa-link"></i>
                  <% end %>
                  <%= link_to edit_tweet_path(tweet), class: "btn btn-md" do %>
                    <i class="fa fa-pencil"></i>
                  <% end %>
                  <%= link_to tweet, method: :delete, data: {confirm: "Are you sure?"}, class: "btn btn-md" do %>
                    <i class="fa fa-trash-o"></i>
                  <% end %>   
                        
                  <!-- <a class="btn btn-md btn-outline-primary "> <i class="fa fa-reply"></i> Reply</a>
                  <a class="btn btn-md text-white btn-danger"> <i class="fa fa-heart"></i> Like</a> -->
                </p>
              </div>
          </div>
        </div>
      </div>
    <% end %>
<% end %>
